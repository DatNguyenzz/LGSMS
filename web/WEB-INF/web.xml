<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee  http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <filter>
        <filter-name>RegisterFilter</filter-name>
        <filter-class>Filter.RegisterFilter</filter-class>
    </filter>
    <filter>
        <filter-name>ForgotPasswordFilter</filter-name>
        <filter-class>Filter.ForgotPasswordFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>ForgotPasswordFilter</filter-name>
        <url-pattern>/ForgotPassword</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>RegisterFilter</filter-name>
        <url-pattern>/Register</url-pattern>
    </filter-mapping>
    <servlet>
        <servlet-name>ManageProductController</servlet-name>
        <servlet-class>Controller.ManageProductController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ManageAccountController</servlet-name>
        <servlet-class>Controller.ManageAccountController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AuthorizationController</servlet-name>
        <servlet-class>Controller.AuthorizationController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ManageImportController</servlet-name>
        <servlet-class>Controller.ManageImportController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ManageProviderController</servlet-name>
        <servlet-class>Controller.ManageProviderController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ManageOrderController</servlet-name>
        <servlet-class>Controller.ManageOrderController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CustomerProductController</servlet-name>
        <servlet-class>Controller.CustomerProductController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ManageReceiptVoucherController</servlet-name>
        <servlet-class>Controller.ManageReceiptVoucherController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ProfileController</servlet-name>
        <servlet-class>Controller.ProfileController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>HomeController</servlet-name>
        <servlet-class>Controller.HomeController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ShoppingCartController</servlet-name>
        <servlet-class>Controller.ShoppingCartController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CheckOutController</servlet-name>
        <servlet-class>Controller.CheckOutController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>TrackOrderController</servlet-name>
        <servlet-class>Controller.TrackOrderController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ManageReportController</servlet-name>
        <servlet-class>Controller.ManageReportController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ManageProductController</servlet-name>
        <url-pattern>/ManageProduct</url-pattern>
        <url-pattern>/ProductInformation</url-pattern>
        <url-pattern>/AddProduct</url-pattern>
        <url-pattern>/EditProduct</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ManageAccountController</servlet-name>
        <url-pattern>/ManageAccount</url-pattern>
        <url-pattern>/EditAccount</url-pattern>
        <url-pattern>/AddAccount</url-pattern>
        <url-pattern>/Register</url-pattern>
        <url-pattern>/ForgotPassword</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AuthorizationController</servlet-name>
        <url-pattern>/login</url-pattern>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ManageImportController</servlet-name>
        <url-pattern>/ManageImport</url-pattern>
        <url-pattern>/ImportNewProduct</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ManageProviderController</servlet-name>
        <url-pattern>/ManageProvider</url-pattern>
        <url-pattern>/EditProvider</url-pattern>
        <url-pattern>/AddProvider</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ManageOrderController</servlet-name>
        <url-pattern>/ManageOrder</url-pattern>
        <url-pattern>/ManageNewOrder</url-pattern>
        <url-pattern>/ManageCancelOrder</url-pattern>
        <url-pattern>/ManageAcceptOrder</url-pattern>
        <url-pattern>/ViewDetailOrder</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CustomerProductController</servlet-name>
        <url-pattern>/Product</url-pattern>
        <url-pattern>/CustomerProductInformation</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ManageReceiptVoucherController</servlet-name>
        <url-pattern>/ManageReceiptVoucher</url-pattern>
        <url-pattern>/ReceiptInfo</url-pattern>
        <url-pattern>/UpdateReceipt</url-pattern>
        <url-pattern>/ReceiptInfoByOrderID</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ProfileController</servlet-name>
        <url-pattern>/MyProfile</url-pattern>
        <url-pattern>/ChangePassword</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>HomeController</servlet-name>
        <url-pattern>/Home</url-pattern>
        <url-pattern>/StaffHome</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ShoppingCartController</servlet-name>
        <url-pattern>/ShoppingCart</url-pattern>
        <url-pattern>/EditQuantity</url-pattern>
        <url-pattern>/RemoveProduct</url-pattern>
        <url-pattern>/AddProductToCart</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CheckOutController</servlet-name>
        <url-pattern>/CheckOut</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>TrackOrderController</servlet-name>
        <url-pattern>/TrackOrder</url-pattern>
        <url-pattern>/OrderDetail</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ManageReportController</servlet-name>
        <url-pattern>/ManageReport</url-pattern>
        <url-pattern>/ManageReportProduct</url-pattern>
        <url-pattern>/ManageReportOrder</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            120
        </session-timeout>
    </session-config>
</web-app>
